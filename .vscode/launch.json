{
   // Use IntelliSense to learn about possible attributes.
   // Hover to view descriptions of existing attributes.
   // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
   "version": "0.2.0",
   "configurations": [
      {
         "name": "Launch-Debug-Main",
         "preLaunchTask": "Build-Debug",
         "type": "cppdbg",
         "request": "launch",
         "MIMode": "gdb",
         "miDebuggerPath": "/usr/bin/gdb",
         "program": "${workspaceRoot}/bazel-out/k8-dbg/bin/${relativeFileDirname}/main",
         "cwd": "${workspaceRoot}/bazel-out/k8-dbg/bin/${relativeFileDirname}/main.runfiles/__main__/",
         "stopAtEntry": false,
         "externalConsole": false,
         "sourceFileMap": {
            "/proc/self/cwd/${relativeFileDirname}/": "${workspaceFolder}/${relativeFileDirname}/"
         }
      },
   ]
}